@{
    ViewBag.Title = "Listado Productos";
    Layout = "_Layout";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de productos</title>
</head>

<body>
    <div class="main">

        <div class="links">
            <a asp-controller="Dashboard" asp-action="Index">Inicio</a>
            <a asp-controller="Usuarios" asp-action="Index">Gestión de productos</a>
        </div>

        <div class="table">
            <div class="button">
                <a class="btnCrear btn" asp-controller="Usuarios" asp-action="Create">Crear nuevo producto</a>
            </div>
            <table class="table text-center">
                <thead>
                    <th>Imagen</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Acciones</th>
                </thead>
                <tbody>
                    <td><img src="" alt="imagen del producto"></td>
                    <td>Atún</td>
                    <td>$10.000</td>
                    <td>10</td>
                    <td>
                        <a class="btnEliminar btn " asp-controller="Usuarios" asp-action="Delete">Eliminar</a>
                        <a class="btnEditar btn" asp-controller="Usuarios" asp-action="Update">Editar</a>
                        <a class="btnDetalles btn" asp-controller="Usuarios" asp-action="Show">Detalles</a>
                    </td>
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>